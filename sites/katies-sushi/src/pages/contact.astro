---
/**
 * Contact Page
 */
import PageLayout from "@/layouts/PageLayout.astro";
import Hours from "@/components/Hours.astro";
import { config } from "@/config";
---

<PageLayout title="Contact" description={`Get in touch with ${config.client.name}`}>
  <div class="max-w-6xl mx-auto px-4 py-12">
    <h1 class="text-4xl font-bold text-center mb-12">Contact Us</h1>

    <div class="grid md:grid-cols-2 gap-12">
      <!-- Contact Form -->
      <div>
        <h2 class="text-2xl font-bold mb-6">Send us a message</h2>
        <form
          action={config.intake.formUrl}
          method="POST"
          class="space-y-4"
        >
          <div class="form-control">
            <label class="label" for="name">
              <span class="label-text">Name</span>
            </label>
            <input
              type="text"
              id="name"
              name="name"
              class="input input-bordered w-full"
              required
            />
          </div>

          <div class="form-control">
            <label class="label" for="email">
              <span class="label-text">Email</span>
            </label>
            <input
              type="email"
              id="email"
              name="email"
              class="input input-bordered w-full"
              required
            />
          </div>

          <div class="form-control">
            <label class="label" for="phone">
              <span class="label-text">Phone (optional)</span>
            </label>
            <input
              type="tel"
              id="phone"
              name="phone"
              class="input input-bordered w-full"
            />
          </div>

          <div class="form-control">
            <label class="label" for="message">
              <span class="label-text">Message</span>
            </label>
            <textarea
              id="message"
              name="message"
              class="textarea textarea-bordered w-full h-32"
              required
            ></textarea>
          </div>

          <button type="submit" class="btn btn-primary w-full">
            Send Message
          </button>
        </form>
      </div>

      <!-- Contact Info -->
      <div>
        <h2 class="text-2xl font-bold mb-6">Visit us</h2>

        <div class="space-y-6">
          {config.client.address && (
            <div>
              <h3 class="font-semibold text-lg mb-2">Address</h3>
              <p class="text-base-content/80">{config.client.address}</p>
            </div>
          )}

          {config.client.phone && (
            <div>
              <h3 class="font-semibold text-lg mb-2">Phone</h3>
              <a
                href={`tel:${config.client.phone.replace(/\D/g, "")}`}
                class="link link-primary text-lg"
              >
                {config.client.phone}
              </a>
            </div>
          )}

          <div>
            <h3 class="font-semibold text-lg mb-2">Email</h3>
            <a href={`mailto:${config.client.email}`} class="link link-primary">
              {config.client.email}
            </a>
          </div>

          <div>
            <h3 class="font-semibold text-lg mb-4">Hours</h3>
            <div class="card bg-base-200">
              <div class="card-body p-4">
                <Hours />
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</PageLayout>
