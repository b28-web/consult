---

<PageLayout title="Services">
  <!-- Hero -->
  <section class="bg-primary/10 py-16 px-4">
    <div class="max-w-4xl mx-auto text-center">
      <h1 class="text-4xl font-bold mb-4">Our Services</h1>
      <p class="text-xl text-base-content/70">
        Complete landscaping solutions for every season.
      </p>
    </div>
  </section>

  <!-- Services List -->
  <section class="py-16 px-4">
    <div class="max-w-6xl mx-auto">
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {
          config.services.map((service) => (
            <div id={service.slug} class="card bg-base-100 shadow-xl border border-primary/10">
              <div class="card-body">
                <div class="text-4xl mb-2">
                  {service.slug === "lawn-maintenance" && "üåø"}
                  {service.slug === "landscape-design" && "üé®"}
                  {service.slug === "tree-shrub-care" && "üå≥"}
                  {service.slug === "irrigation" && "üíß"}
                  {service.slug === "hardscaping" && "üß±"}
                  {service.slug === "seasonal-cleanup" && "üçÉ"}
                </div>
                <h2 class="card-title">{service.name}</h2>
                <p class="text-base-content/70">{service.description}</p>
                <div class="card-actions justify-end mt-4">
                  <a href="/contact" class="btn btn-primary btn-sm">Get a Quote</a>
                </div>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Seasonal Services -->
  <section class="py-16 px-4 bg-secondary/5">
    <div class="max-w-6xl mx-auto">
      <h2 class="text-3xl font-bold text-center mb-4">Year-Round Care</h2>
      <p class="text-center text-base-content/70 mb-12 max-w-2xl mx-auto">
        Your landscape needs different care throughout the year. We provide seasonal services
        to keep your property looking great no matter the weather.
      </p>
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
        {
          Object.values(seasons).map((season) => (
            <div class="card bg-base-100 shadow-lg border border-primary/10">
              <div class="card-body">
                <div class="text-4xl text-center mb-2">{season.icon}</div>
                <h3 class="card-title justify-center">{season.name}</h3>
                <ul class="mt-4 space-y-2">
                  {season.services.map((service) => (
                    <li class="flex items-center gap-2 text-sm">
                      <span class="text-primary">‚úì</span>
                      {service}
                    </li>
                  ))}
                </ul>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Service Packages -->
  <section class="py-16 px-4">
    <div class="max-w-4xl mx-auto">
