---
/**
 * Services Page
 *
 * Service menu with prices for the barbershop.
 */
import PageLayout from "@/layouts/PageLayout.astro";
import { config } from "@/config";

// Service pricing data
const serviceMenu = [
  { name: "Classic Haircut", price: "$25", description: "Traditional scissor cut with hot towel finish." },
  { name: "Fade / Taper", price: "$30", description: "Modern fade or taper with clean lines." },
  { name: "Beard Trim", price: "$15", description: "Professional shaping and trimming." },
  { name: "Hot Towel Shave", price: "$35", description: "Traditional straight razor experience." },
  { name: "Haircut + Beard Combo", price: "$40", description: "Full service cut and beard grooming." },
  { name: "Kids Cut", price: "$18", description: "Cuts for kids 12 and under." },
];
---

<PageLayout title="Services & Pricing">
  <!-- Hero -->
  <section class="bg-primary py-12 sm:py-16 px-4">
    <div class="max-w-4xl mx-auto text-center">
      <h1 class="text-3xl sm:text-4xl font-bold mb-3 sm:mb-4 text-primary-content">Services & Pricing</h1>
      <p class="text-lg sm:text-xl text-primary-content/80">
        Quality cuts at fair prices. No hidden fees.
      </p>
    </div>
  </section>

  <!-- Price Menu -->
  <section class="py-12 sm:py-16 px-4">
    <div class="max-w-3xl mx-auto">
      <div class="card bg-base-100 shadow-xl">
        <div class="card-body p-4 sm:p-8">
          <h2 class="text-2xl font-bold text-center mb-6 sm:mb-8">Service Menu</h2>
          <div class="divide-y divide-base-300">
            {serviceMenu.map((service) => (
              <div class="py-4 sm:py-6 flex justify-between items-start gap-4">
                <div class="flex-1">
                  <h3 class="font-bold text-lg">{service.name}</h3>
                  <p class="text-sm text-base-content/70 mt-1">{service.description}</p>
                </div>
                <div class="text-xl sm:text-2xl font-bold text-secondary whitespace-nowrap">
                  {service.price}
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- What to Expect -->
  <section class="py-12 sm:py-16 px-4 bg-base-200">
    <div class="max-w-4xl mx-auto">
      <h2 class="text-2xl sm:text-3xl font-bold text-center mb-8 sm:mb-12">The Classic Cuts Experience</h2>
      <div class="grid sm:grid-cols-3 gap-6 sm:gap-8">
        <div class="text-center">
          <div class="w-16 h-16 bg-secondary rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-secondary-content" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="font-bold text-lg mb-2">No Rush</h3>
          <p class="text-sm text-base-content/70">
            We take our time to get it right. Every cut gets the attention it deserves.
          </p>
        </div>
        <div class="text-center">
          <div class="w-16 h-16 bg-secondary rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-secondary-content" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="font-bold text-lg mb-2">Friendly Service</h3>
          <p class="text-sm text-base-content/70">
            A welcoming atmosphere where everyone feels at home.
          </p>
        </div>
        <div class="text-center">
          <div class="w-16 h-16 bg-secondary rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-secondary-content" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
            </svg>
          </div>
          <h3 class="font-bold text-lg mb-2">Clean Finish</h3>
          <p class="text-sm text-base-content/70">
            Hot towel, neck shave, and styling included with every haircut.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-12 sm:py-16 bg-primary text-primary-content">
    <div class="max-w-4xl mx-auto text-center px-4">
      <h2 class="text-2xl sm:text-3xl font-bold mb-3 sm:mb-4">Ready for a Fresh Cut?</h2>
      <p class="text-base sm:text-lg mb-6 sm:mb-8">
        Book your appointment online or walk in today.
      </p>
      <div class="flex flex-col sm:flex-row gap-3 sm:gap-4 justify-center">
        <a href="/book" class="btn btn-secondary btn-md sm:btn-lg">Book Appointment</a>
        <a href={`tel:${config.client.phone?.replace(/\D/g, "")}`} class="btn btn-outline btn-md sm:btn-lg border-primary-content text-primary-content hover:bg-primary-content hover:text-primary">
          Call {config.client.phone}
        </a>
      </div>
    </div>
  </section>
</PageLayout>
