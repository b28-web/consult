---
/**
 * Book Now Page
 *
 * Cal.com booking widget for scheduling appointments.
 */
import PageLayout from "@/layouts/PageLayout.astro";
import CalEmbed from "@/components/CalEmbed.astro";
import { config } from "@/config";
---

<PageLayout title="Book Your Appointment">
  <!-- Hero -->
  <section class="bg-primary py-12 sm:py-16 px-4">
    <div class="max-w-4xl mx-auto text-center">
      <h1 class="text-3xl sm:text-4xl font-bold mb-3 sm:mb-4 text-primary-content">Book Your Appointment</h1>
      <p class="text-lg sm:text-xl text-primary-content/80">
        Select a service and time that works for you.
      </p>
    </div>
  </section>

  <!-- Booking Widget -->
  <section class="py-12 sm:py-16 px-4">
    <div class="max-w-4xl mx-auto">
      <div class="card bg-base-100 shadow-xl">
        <div class="card-body p-4 sm:p-8">
          <CalEmbed
            username={config.calcom!.username}
            eventSlug={config.calcom!.eventSlug}
            mode="inline"
            brandColor={config.calcom!.brandColor}
            layout="month_view"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- Services Quick Reference -->
  <section class="py-12 sm:py-16 px-4 bg-base-200">
    <div class="max-w-4xl mx-auto">
      <h2 class="text-2xl sm:text-3xl font-bold text-center mb-8 sm:mb-12">Our Services</h2>
      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-4">
        {config.services.map((service) => (
          <div class="card bg-base-100">
            <div class="card-body p-4">
              <h3 class="font-bold">{service.name}</h3>
              <p class="text-sm text-base-content/70">{service.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Contact Alternative -->
  <section class="py-12 px-4">
    <div class="max-w-4xl mx-auto text-center">
      <p class="text-base-content/70 mb-4">
        Walk-ins welcome. Call ahead to check availability.
      </p>
      <a href={`tel:${config.client.phone?.replace(/\D/g, "")}`} class="btn btn-outline btn-md sm:btn-lg">
        {config.client.phone}
      </a>
    </div>
  </section>
</PageLayout>
