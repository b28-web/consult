---
/**
 * Contact Page with HTMX Form and optional Cal.com scheduling
 */
import PageLayout from "@/layouts/PageLayout.astro";
import CalEmbed from "@/components/CalEmbed.astro";
import { config } from "@/config";

const calBrandColor = config.calcom?.brandColor ?? config.branding?.primaryColor;
---

<PageLayout title="Contact Us">
  <section class="py-16 px-4">
    <div class="max-w-4xl mx-auto">
      <h1 class="text-4xl font-bold text-center mb-4">Contact Us</h1>
      <p class="text-center text-lg mb-12">
        Have a question or want to get a quote? Fill out the form below.
      </p>

      <div class="grid md:grid-cols-2 gap-12">
        <!-- Contact Form (HTMX) -->
        <div class="card bg-base-100 shadow-xl">
          <div class="card-body">
            <form
              id="contact-form"
              hx-post={config.intake.formUrl}
              hx-target="#form-response"
              hx-swap="innerHTML"
              hx-indicator="#form-spinner"
              class="space-y-4"
            >
              <!-- Response container -->
              <div id="form-response"></div>

              <!-- Honeypot -->
              <div class="hidden" aria-hidden="true">
                <input type="text" name="website" tabindex="-1" autocomplete="off" />
              </div>

              <!-- Hidden source URL -->
              <input type="hidden" name="source_url" value={Astro.url.href} />

              <div class="form-control">
                <label class="label" for="name">
                  <span class="label-text">Name *</span>
                </label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  required
                  class="input input-bordered"
                  placeholder="Your name"
                />
              </div>

              <div class="form-control">
                <label class="label" for="email">
                  <span class="label-text">Email *</span>
                </label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  class="input input-bordered"
                  placeholder="your@email.com"
                />
              </div>

              <div class="form-control">
                <label class="label" for="phone">
                  <span class="label-text">Phone</span>
                </label>
                <input
                  type="tel"
                  id="phone"
                  name="phone"
                  class="input input-bordered"
                  placeholder="(555) 123-4567"
                />
              </div>

              <div class="form-control">
                <label class="label" for="service">
                  <span class="label-text">Service Interested In</span>
                </label>
                <select id="service" name="service" class="select select-bordered">
                  <option value="">Select a service...</option>
                  {config.services.map((s) => (
                    <option value={s.slug}>{s.name}</option>
                  ))}
                </select>
              </div>

              <div class="form-control">
                <label class="label" for="message">
                  <span class="label-text">Message *</span>
                </label>
                <textarea
                  id="message"
                  name="message"
                  required
                  class="textarea textarea-bordered h-32"
                  placeholder="How can we help you?"
                ></textarea>
              </div>

              <button type="submit" class="btn btn-primary w-full">
                <span id="form-spinner" class="loading loading-spinner htmx-indicator"></span>
                Send Message
              </button>
            </form>
          </div>
        </div>

        <!-- Contact Info -->
        <div class="space-y-8">
          <div>
            <h2 class="text-2xl font-bold mb-4">Get in Touch</h2>
            <p class="text-base-content/70">
              We'd love to hear from you. Reach out using any of the methods below.
            </p>
          </div>

          {config.client.phone && (
            <div class="flex items-start gap-4">
              <div class="bg-primary/10 p-3 rounded-lg">
                <svg class="w-6 h-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold">Phone</h3>
                <a href={`tel:${config.client.phone.replace(/\D/g, "")}`} class="link">
                  {config.client.phone}
                </a>
              </div>
            </div>
          )}

          <div class="flex items-start gap-4">
            <div class="bg-primary/10 p-3 rounded-lg">
              <svg class="w-6 h-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
            </div>
            <div>
              <h3 class="font-semibold">Email</h3>
              <a href={`mailto:${config.client.email}`} class="link">
                {config.client.email}
              </a>
            </div>
          </div>

          {config.client.address && (
            <div class="flex items-start gap-4">
              <div class="bg-primary/10 p-3 rounded-lg">
                <svg class="w-6 h-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold">Address</h3>
                <p>{config.client.address}</p>
              </div>
            </div>
          )}
        </div>
      </div>

      {/* Cal.com Scheduling Section */}
      {config.calcom && (
        <div class="mt-16">
          <h2 class="text-2xl font-bold text-center mb-8">Schedule an Appointment</h2>
          <CalEmbed
            username={config.calcom.username}
            eventSlug={config.calcom.eventSlug}
            brandColor={calBrandColor}
            mode="inline"
          />
        </div>
      )}
    </div>
  </section>
</PageLayout>

<style>
  .htmx-indicator {
    display: none;
  }
  .htmx-request .htmx-indicator {
    display: inline-block;
  }
</style>
