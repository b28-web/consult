---
/**
 * Home Page
 */
import PageLayout from "@/layouts/PageLayout.astro";
import { config } from "@/config";
---

<PageLayout title="Home">
  <!-- Hero Section -->
  <section class="hero min-h-[50vh] sm:min-h-[60vh] lg:min-h-[70vh] bg-base-200">
    <div class="hero-content text-center px-4">
      <div class="max-w-2xl">
        <h1 class="text-3xl sm:text-4xl lg:text-5xl font-bold">{config.client.name}</h1>
        <p class="py-4 sm:py-6 text-lg sm:text-xl">{config.client.tagline}</p>
        <div class="flex flex-col sm:flex-row gap-3 sm:gap-4 justify-center">
          <a href="/book" class="btn btn-primary">Book a Pickup</a>
          <a href="/services" class="btn btn-outline">Our Services</a>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Preview -->
  <section class="py-12 sm:py-16 px-4">
    <div class="max-w-6xl mx-auto">
      <h2 class="text-2xl sm:text-3xl font-bold text-center mb-8 sm:mb-12">Our Services</h2>
      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-4 sm:gap-6">
        {config.services.map((service) => (
          <div class="card bg-base-100 shadow-xl">
            <div class="card-body p-4 sm:p-6">
              <h3 class="card-title text-lg sm:text-xl">{service.name}</h3>
              <p class="text-sm sm:text-base">{service.description}</p>
              <div class="card-actions justify-end mt-2">
                <a href={`/services#${service.slug}`} class="btn btn-primary btn-sm">
                  Learn More
                </a>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-12 sm:py-16 bg-primary text-primary-content">
    <div class="max-w-4xl mx-auto text-center px-4">
      <h2 class="text-2xl sm:text-3xl font-bold mb-3 sm:mb-4">Ready to Clear Your Space?</h2>
      <p class="text-base sm:text-lg mb-6 sm:mb-8">Book your pickup today. Same-day service available.</p>
      <a href="/book" class="btn btn-secondary btn-md sm:btn-lg">Book Now</a>
    </div>
  </section>
</PageLayout>
