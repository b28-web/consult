---
/**
 * Services Page
 *
 * Displays all cleaning services with detailed descriptions.
 */
import PageLayout from "@/layouts/PageLayout.astro";
import { config } from "@/config";
---

<PageLayout title="Services">
  <!-- Hero -->
  <section class="bg-primary/10 py-16 px-4">
    <div class="max-w-4xl mx-auto text-center">
      <h1 class="text-4xl font-bold mb-4">Our Cleaning Services</h1>
      <p class="text-xl text-base-content/70">
        Professional cleaning solutions for homes and businesses.
      </p>
    </div>
  </section>

  <!-- Services List -->
  <section class="py-16 px-4">
    <div class="max-w-6xl mx-auto">
      <div class="grid gap-8">
        {
          config.services.map((service, index) => (
            <div
              id={service.slug}
              class:list={[
                "card lg:card-side bg-base-100 shadow-xl border border-primary/10",
                index % 2 === 1 && "lg:flex-row-reverse",
              ]}
            >
              <figure class="lg:w-1/3 bg-primary/5 flex items-center justify-center p-8">
                <div class="text-6xl">
                  {service.slug === "regular-house-cleaning" && "üè†"}
                  {service.slug === "deep-cleaning" && "‚ú®"}
                  {service.slug === "move-cleaning" && "üì¶"}
                  {service.slug === "office-cleaning" && "üè¢"}
                  {service.slug === "post-construction" && "üî®"}
                </div>
              </figure>
              <div class="card-body lg:w-2/3">
                <h2 class="card-title text-2xl">{service.name}</h2>
                <p class="text-lg">{service.description}</p>
                <div class="card-actions justify-end mt-4">
                  <a href="/pricing" class="btn btn-primary">
                    View Pricing
                  </a>
                  <a href="/contact" class="btn btn-outline btn-primary">
                    Get a Quote
                  </a>
                </div>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Why Choose Us -->
  <section class="py-16 px-4 bg-primary/5">
    <div class="max-w-4xl mx-auto">
      <h2 class="text-3xl font-bold text-center mb-12">Why Choose Sparkle Clean?</h2>
      <div class="grid md:grid-cols-2 gap-8">
        <div class="flex gap-4 items-start">
          <div class="text-3xl">üåø</div>
          <div>
            <h3 class="font-bold text-lg">Eco-Friendly Products</h3>
            <p class="text-base-content/70">
              We use environmentally safe cleaning products that are tough on dirt but gentle on your home.
            </p>
          </div>
        </div>
        <div class="flex gap-4 items-start">
          <div class="text-3xl">‚úÖ</div>
          <div>
            <h3 class="font-bold text-lg">Trusted Professionals</h3>
            <p class="text-base-content/70">
              Our cleaners are background-checked, trained, and insured for your peace of mind.
            </p>
          </div>
        </div>
        <div class="flex gap-4 items-start">
          <div class="text-3xl">‚≠ê</div>
          <div>
            <h3 class="font-bold text-lg">Satisfaction Guaranteed</h3>
            <p class="text-base-content/70">
              Not happy? We'll come back and make it right, free of charge.
            </p>
          </div>
        </div>
        <div class="flex gap-4 items-start">
          <div class="text-3xl">üìÖ</div>
          <div>
            <h3 class="font-bold text-lg">Flexible Scheduling</h3>
            <p class="text-base-content/70">
              Weekly, bi-weekly, monthly, or one-time cleans. You choose what works for you.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-16 bg-primary text-primary-content">
    <div class="max-w-4xl mx-auto text-center px-4">
      <h2 class="text-3xl font-bold mb-4">Ready for a Cleaner Home?</h2>
      <p class="text-lg mb-8">
        Get started with a free quote today.
      </p>
      <div class="flex gap-4 justify-center flex-wrap">
        <a href="/pricing" class="btn btn-secondary btn-lg">View Pricing</a>
        <a href="/contact" class="btn btn-outline btn-lg border-white text-white hover:bg-white hover:text-primary">
          Get a Quote
        </a>
      </div>
    </div>
  </section>
</PageLayout>
