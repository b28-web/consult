---
/**
 * PageLayout - Standard page with Header and Footer
 *
 * Extends BaseLayout with:
 * - Header component
 * - Main content area
 * - Footer component
 *
 * Props:
 * - title: Page title
 * - description: Meta description
 * - canonicalUrl: Optional canonical URL
 * - navItems: Navigation items for header
 * - businessName: Business name for header/footer
 * - businessPhone: Contact phone (optional)
 * - businessEmail: Contact email (optional)
 * - socialLinks: Social media links (optional)
 */

import BaseLayout from './BaseLayout.astro';

interface NavItem {
  label: string;
  href: string;
}

interface SocialLink {
  platform: 'facebook' | 'instagram' | 'twitter' | 'linkedin' | 'youtube';
  url: string;
}

interface Props {
  title: string;
  description: string;
  canonicalUrl?: string;
  navItems: NavItem[];
  businessName: string;
  businessPhone?: string;
  businessEmail?: string;
  businessAddress?: string;
  socialLinks?: SocialLink[];
}

const {
  title,
  description,
  canonicalUrl,
  navItems,
  businessName,
  businessPhone,
  businessEmail,
  businessAddress,
  socialLinks = [],
} = Astro.props;

const currentPath = Astro.url.pathname;
---

<BaseLayout title={title} description={description} canonicalUrl={canonicalUrl}>
  <slot name="head" slot="head" />

  <header class="sticky top-0 z-50 bg-white/95 backdrop-blur-sm border-b border-neutral-200">
    <div class="max-w-7xl mx-auto container-padding">
      <nav class="flex items-center justify-between h-16 lg:h-20">
        <!-- Logo/Business Name -->
        <a href="/" class="text-xl font-semibold text-neutral-900 hover:text-primary-600 transition-colors">
          {businessName}
        </a>

        <!-- Desktop Navigation -->
        <ul class="hidden lg:flex items-center gap-8">
          {navItems.map((item) => (
            <li>
              <a
                href={item.href}
                class:list={[
                  'text-sm font-medium transition-colors',
                  currentPath === item.href
                    ? 'text-primary-600'
                    : 'text-neutral-600 hover:text-primary-600',
                ]}
              >
                {item.label}
              </a>
            </li>
          ))}
          {businessPhone && (
            <li>
              <a
                href={`tel:${businessPhone.replace(/\D/g, '')}`}
                class="inline-flex items-center gap-2 px-4 py-2 bg-primary-600 text-white text-sm font-medium rounded-lg hover:bg-primary-700 transition-colors"
              >
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
                {businessPhone}
              </a>
            </li>
          )}
        </ul>

        <!-- Mobile Menu Button -->
        <button
          type="button"
          class="lg:hidden p-2 text-neutral-600 hover:text-neutral-900"
          hx-get="/partials/mobile-menu"
          hx-target="#mobile-menu"
          hx-swap="innerHTML"
          aria-label="Toggle menu"
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </nav>
    </div>

    <!-- Mobile Menu Container (populated via HTMX) -->
    <div id="mobile-menu"></div>
  </header>

  <main id="main-content">
    <slot />
  </main>

  <footer class="bg-neutral-900 text-neutral-300">
    <div class="max-w-7xl mx-auto container-padding section-padding">
      <div class="grid gap-12 lg:grid-cols-4">
        <!-- Business Info -->
        <div class="lg:col-span-2">
          <h2 class="text-xl font-semibold text-white mb-4">{businessName}</h2>
          {businessAddress && <p class="mb-2">{businessAddress}</p>}
          {businessPhone && (
            <p class="mb-2">
              <a href={`tel:${businessPhone.replace(/\D/g, '')}`} class="hover:text-white transition-colors">
                {businessPhone}
              </a>
            </p>
          )}
          {businessEmail && (
            <p>
              <a href={`mailto:${businessEmail}`} class="hover:text-white transition-colors">
                {businessEmail}
              </a>
            </p>
          )}

          <!-- Social Links -->
          {socialLinks.length > 0 && (
            <div class="flex gap-4 mt-6">
              {socialLinks.map((link) => (
                <a
                  href={link.url}
                  class="w-10 h-10 flex items-center justify-center rounded-full bg-neutral-800 hover:bg-primary-600 transition-colors"
                  aria-label={`Follow us on ${link.platform}`}
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  <span class="sr-only">{link.platform}</span>
                  <!-- Icon would go here - sites customize -->
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <circle cx="12" cy="12" r="4" />
                  </svg>
                </a>
              ))}
            </div>
          )}
        </div>

        <!-- Quick Links -->
        <div>
          <h3 class="text-sm font-semibold text-white uppercase tracking-wider mb-4">Quick Links</h3>
          <ul class="space-y-3">
            {navItems.map((item) => (
              <li>
                <a href={item.href} class="hover:text-white transition-colors">
                  {item.label}
                </a>
              </li>
            ))}
          </ul>
        </div>

        <!-- Slot for additional footer content -->
        <div>
          <slot name="footer-extra" />
        </div>
      </div>

      <!-- Copyright -->
      <div class="mt-12 pt-8 border-t border-neutral-800 text-sm text-neutral-500">
        <p>&copy; {new Date().getFullYear()} {businessName}. All rights reserved.</p>
      </div>
    </div>
  </footer>

  <slot name="scripts" slot="scripts" />
</BaseLayout>
